<h1>Here are the tasks!</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id) %>
    <button><%= link_to "Delete",
                task_path(task.id),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    </button>
  </li>
  <% end %>
</ul>
<p><%= link_to "Add a new task ", new_task_path %></p>
